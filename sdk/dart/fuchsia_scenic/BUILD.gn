import("//build/dart/dart_library.gni")
import("//build/dart/fidl_move.gni")

dart_library("fuchsia_scenic") {
  package_name = "fuchsia_scenic"
  null_safe = true

  sdk_category = "partner"

  source_dir = "lib"

  sources = [
    "src/scenic_context.dart",
    "src/view_token_pair.dart",
    "views.dart",
  ]

  deps = [
    "//sdk/fidl/fuchsia.ui.views",

    # TODO(fxbug.dev/71491): Migrate viewRef away from package:fuchsia_services.
    dart_package_label.fuchsia_services,
    dart_package_label.zircon,
  ]
}
